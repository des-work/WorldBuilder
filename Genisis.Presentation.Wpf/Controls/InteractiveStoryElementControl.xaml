<UserControl x:Class="Genisis.Presentation.Wpf.Controls.InteractiveStoryElementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="Transparent">
    
    <UserControl.Resources>
        <!-- Styles -->
        <Style x:Key="ElementCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3d3d40"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ElementTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="ElementDescriptionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFB74D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Element Type Icons -->
        <Style x:Key="ElementIconStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF9800"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource ElementCardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Element Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Element Type Icon -->
                <TextBlock Grid.Column="0" Style="{StaticResource ElementIconStyle}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}">
                            <Binding Path="ElementType"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <!-- Element Title -->
                <TextBlock Grid.Column="1" Text="{Binding Title}" Style="{StaticResource ElementTitleStyle}"/>

                <!-- Context Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Primary" 
                            Command="{Binding SetPrimaryContextCommand}"
                            Style="{StaticResource PrimaryActionButtonStyle}"
                            ToolTip="Set as primary context"/>
                    <Button Content="Secondary" 
                            Command="{Binding SetSecondaryContextCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Set as secondary context"/>
                    <Button Content="Ã—" 
                            Command="{Binding ClearContextCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Clear from context"/>
                </StackPanel>
            </Grid>

            <!-- Element Description -->
            <TextBlock Grid.Row="1" Text="{Binding Description}" Style="{StaticResource ElementDescriptionStyle}"/>

            <!-- Element Metadata -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
                <TextBlock Text="{Binding ElementType}" 
                           Foreground="#888888" 
                           FontSize="10" 
                           Margin="0,0,10,0"/>
                <TextBlock Text="{Binding LastModified}" 
                           Foreground="#888888" 
                           FontSize="10" 
                           Margin="0,0,10,0"/>
                <TextBlock Text="{Binding WordCount}" 
                           Foreground="#888888" 
                           FontSize="10"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Button Content="Edit" 
                        Command="{Binding EditCommand}"
                        Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="AI Chat" 
                        Command="{Binding AIChatCommand}"
                        Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Link" 
                        Command="{Binding LinkCommand}"
                        Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Duplicate" 
                        Command="{Binding DuplicateCommand}"
                        Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Export" 
                        Command="{Binding ExportCommand}"
                        Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Favorite" 
                        Command="{Binding ToggleFavoriteCommand}"
                        Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
