<UserControl x:Class="Genisis.Presentation.Wpf.Controls.SeamlessNavigationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="Transparent">
    
    <UserControl.Resources>
        <!-- Styles -->
        <Style x:Key="BreadcrumbItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BreadcrumbSeparatorStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="QuickActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavigationItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3d3d40"/>
                    <Setter Property="Foreground" Value="#ffffff"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Breadcrumb Navigation -->
        <Border Grid.Row="0" Background="#1e1e1e" Padding="10,5" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Navigation:" 
                           Foreground="#888888" 
                           FontSize="12" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                
                <!-- Breadcrumb items will be dynamically generated -->
                <ItemsControl x:Name="BreadcrumbItems" ItemsSource="{Binding BreadcrumbPath}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="{Binding Title}" 
                                        Command="{Binding DataContext.NavigateToElementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource BreadcrumbItemStyle}"/>
                                <TextBlock Text=">" Style="{StaticResource BreadcrumbSeparatorStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Quick Actions Bar -->
        <Border Grid.Row="1" Background="#2d2d30" Padding="10,5" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Quick Actions:" 
                           Foreground="#888888" 
                           FontSize="12" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                
                <Button Content="Recent" 
                        Command="{Binding ShowRecentCommand}"
                        Style="{StaticResource QuickActionButtonStyle}"/>
                <Button Content="Favorites" 
                        Command="{Binding ShowFavoritesCommand}"
                        Style="{StaticResource QuickActionButtonStyle}"/>
                <Button Content="Search" 
                        Command="{Binding ToggleSearchCommand}"
                        Style="{StaticResource QuickActionButtonStyle}"/>
                <Button Content="Timeline" 
                        Command="{Binding ShowTimelineCommand}"
                        Style="{StaticResource QuickActionButtonStyle}"/>
                <Button Content="Relationships" 
                        Command="{Binding ShowRelationshipsCommand}"
                        Style="{StaticResource QuickActionButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Search Box (Collapsible) -->
        <Border Grid.Row="2" Background="#1e1e1e" Padding="10,5" 
                Visibility="{Binding IsSearchVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBox x:Name="SearchBox" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource SearchBoxStyle}"
                         PlaceholderText="Search stories, characters, chapters..."
                         Margin="0,0,0,10"/>
                
                <!-- Search Results -->
                <ListBox ItemsSource="{Binding SearchResults}" 
                         Background="Transparent" 
                         BorderThickness="0"
                         MaxHeight="200">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Title}" 
                                    Command="{Binding DataContext.NavigateToElementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource NavigationItemStyle}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Navigation Content -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Recent Items -->
                <Expander Header="Recent Items" 
                          IsExpanded="True" 
                          Foreground="#ffffff" 
                          Margin="0,0,0,10">
                    <ListBox ItemsSource="{Binding RecentItems}" 
                             Background="Transparent" 
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Title}" 
                                        Command="{Binding DataContext.NavigateToElementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource NavigationItemStyle}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander>

                <!-- Favorites -->
                <Expander Header="Favorites" 
                          IsExpanded="False" 
                          Foreground="#ffffff" 
                          Margin="0,0,0,10">
                    <ListBox ItemsSource="{Binding Favorites}" 
                             Background="Transparent" 
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Title}" 
                                        Command="{Binding DataContext.NavigateToElementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource NavigationItemStyle}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander>

                <!-- All Elements -->
                <Expander Header="All Elements" 
                          IsExpanded="False" 
                          Foreground="#ffffff" 
                          Margin="0,0,0,10">
                    <ListBox ItemsSource="{Binding AllElements}" 
                             Background="Transparent" 
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Title}" 
                                        Command="{Binding DataContext.NavigateToElementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource NavigationItemStyle}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
