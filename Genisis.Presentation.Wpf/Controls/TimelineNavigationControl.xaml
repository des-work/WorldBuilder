<UserControl x:Class="Genisis.Presentation.Wpf.Controls.TimelineNavigationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Node Glow Animation -->
        <Storyboard x:Key="NodeGlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="NodeGlow"
                           Storyboard.TargetProperty="Opacity"
                           From="0.3" To="1" Duration="0:0:2"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Connection Pulse Animation -->
        <Storyboard x:Key="ConnectionPulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ConnectionLine"
                           Storyboard.TargetProperty="Opacity"
                           From="0.5" To="1" Duration="0:0:1.5"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Node Hover Animation -->
        <Storyboard x:Key="NodeHoverAnimation">
            <DoubleAnimation Storyboard.TargetName="NodeScale"
                           Storyboard.TargetProperty="ScaleX"
                           From="1" To="1.2" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetName="NodeScale"
                           Storyboard.TargetProperty="ScaleY"
                           From="1" To="1.2" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Node Leave Animation -->
        <Storyboard x:Key="NodeLeaveAnimation">
            <DoubleAnimation Storyboard.TargetName="NodeScale"
                           Storyboard.TargetProperty="ScaleX"
                           From="1.2" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetName="NodeScale"
                           Storyboard.TargetProperty="ScaleY"
                           From="1.2" To="1" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Glow Effect -->
        <DropShadowEffect x:Key="GlowEffect" 
                         Color="Cyan" 
                         BlurRadius="15" 
                         ShadowDepth="0" 
                         Opacity="0.8"/>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <!-- Timeline Background -->
        <Rectangle Fill="Transparent" 
                   Stroke="DarkGray" 
                   StrokeThickness="1" 
                   Opacity="0.3"/>
        
        <!-- Connection Lines -->
        <Canvas x:Name="ConnectionCanvas" Background="Transparent"/>
        
        <!-- Timeline Nodes -->
        <ItemsControl x:Name="NodesControl" 
                      ItemsSource="{Binding NavigationNodes}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="20,0">
                        <!-- Node Container -->
                        <Grid>
                            <!-- Glow Effect -->
                            <Ellipse x:Name="NodeGlow"
                                     Width="40" Height="40"
                                     Fill="Cyan"
                                     Opacity="0.3"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="NodeScale"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Cyan" 
                                                     BlurRadius="20" 
                                                     ShadowDepth="0" 
                                                     Opacity="0.6"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            
                            <!-- Main Node -->
                            <Ellipse Width="30" Height="30"
                                     Fill="DarkBlue"
                                     Stroke="Cyan"
                                     StrokeThickness="2"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="MainNodeScale"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            
                            <!-- Node Icon -->
                            <TextBlock Text="{Binding Icon}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <ScaleTransform x:Name="IconScale"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            
                            <!-- Node Label -->
                            <TextBlock Text="{Binding Label}"
                                       FontSize="12"
                                       Foreground="LightGray"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,-25"/>
                        </Grid>
                        
                        <!-- Interaction Triggers -->
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard Storyboard="{StaticResource NodeHoverAnimation}"/>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard Storyboard="{StaticResource NodeLeaveAnimation}"/>
                            </EventTrigger>
                        </Grid.Triggers>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- Active Node Indicator -->
        <Ellipse x:Name="ActiveNodeIndicator"
                 Width="35" Height="35"
                 Fill="Transparent"
                 Stroke="Yellow"
                 StrokeThickness="3"
                 Opacity="0"
                 RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <ScaleTransform x:Name="ActiveIndicatorScale"/>
            </Ellipse.RenderTransform>
            <Ellipse.Effect>
                <DropShadowEffect Color="Yellow" 
                                 BlurRadius="25" 
                                 ShadowDepth="0" 
                                 Opacity="0.8"/>
            </Ellipse.Effect>
        </Ellipse>
    </Grid>
</UserControl>
