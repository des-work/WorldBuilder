<Window x:Class="Genisis.Presentation.Wpf.MainWindowV3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Genisis.Presentation.Wpf.Controls"
        xmlns:views="clr-namespace:Genisis.Presentation.Wpf.Views"
        mc:Ignorable="d"
        Title="World Builder" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="Black">
    
    <Window.Resources>
        <!-- Theme Resources -->
        <SolidColorBrush x:Key="PrimaryColor" Color="Blue"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="Gray"/>
        <SolidColorBrush x:Key="AccentColor" Color="Orange"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="Black"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="DarkGray"/>
        <SolidColorBrush x:Key="TextColor" Color="White"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="LightGray"/>
        <SolidColorBrush x:Key="BorderColor" Color="Gray"/>
        <SolidColorBrush x:Key="GlowColor" Color="Cyan"/>
        <SolidColorBrush x:Key="ShadowColor" Color="Black"/>

        <!-- Animation Resources -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>

        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>

        <!-- Style Resources -->
        <Style x:Key="ThemeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Timeline Navigation -->
        <controls:TimelineNavigationControl x:Name="TimelineNavigation"
                                           Grid.Row="0"
                                           Height="80"
                                           NodeClicked="TimelineNavigation_NodeClicked"
                                           NodeHovered="TimelineNavigation_NodeHovered"/>

        <!-- Content Area -->
        <Grid Grid.Row="1" Background="{StaticResource BackgroundColor}">
            <!-- Enhanced Bootscreen -->
            <views:EnhancedBootscreenView x:Name="EnhancedBootscreenView"
                                          Visibility="Visible"
                                          BootscreenCompleted="EnhancedBootscreenView_BootscreenCompleted"/>

            <!-- Main Content -->
            <Grid x:Name="MainContentGrid" Visibility="Collapsed">
                <!-- Content will be dynamically loaded here -->
                <TextBlock Text="Welcome to World Builder"
                           Style="{StaticResource TitleTextStyle}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="2" Height="30" Background="{StaticResource SurfaceColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Status Text -->
            <TextBlock x:Name="StatusText"
                       Grid.Column="0"
                       Text="Ready"
                       Foreground="{StaticResource TextSecondaryColor}"
                       VerticalAlignment="Center"
                       Margin="10,0"/>

            <!-- Theme Selector -->
            <ComboBox x:Name="ThemeSelector"
                      Grid.Column="1"
                      Width="120"
                      Height="25"
                      Margin="5,0"
                      SelectionChanged="ThemeSelector_SelectionChanged">
                <ComboBoxItem Content="Fantasy" Tag="fantasy"/>
                <ComboBoxItem Content="Sci-Fi" Tag="scifi"/>
                <ComboBoxItem Content="Classic" Tag="classic"/>
                <ComboBoxItem Content="Horror" Tag="horror"/>
            </ComboBox>

            <!-- Version Info -->
            <TextBlock Grid.Column="2"
                       Text="v1.0.0"
                       Foreground="{StaticResource TextSecondaryColor}"
                       VerticalAlignment="Center"
                       Margin="10,0"/>
        </Grid>
    </Grid>
</Window>
