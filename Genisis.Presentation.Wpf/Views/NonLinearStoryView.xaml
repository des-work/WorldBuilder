<Window x:Class="Genisis.Presentation.Wpf.Views.NonLinearStoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Genisis.Presentation.Wpf.ViewModels"
        xmlns:controls="clr-namespace:Genisis.Presentation.Wpf.Controls"
        mc:Ignorable="d"
        Title="World Builder - Non-Linear Story Creation" 
        Height="900" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1e1e1e">
    
    <Window.Resources>
        <!-- Theme Resources -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#424242"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#2d2d30"/>
        <SolidColorBrush x:Key="TextColor" Color="#ffffff"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#cccccc"/>
        <SolidColorBrush x:Key="BorderColor" Color="#555555"/>
        <SolidColorBrush x:Key="GlowColor" Color="#00bcd4"/>
        <SolidColorBrush x:Key="ShadowColor" Color="#000000"/>

        <!-- Styles -->
        <Style x:Key="ContextPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style x:Key="ContextItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryContextStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFB74D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuggestionItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ChatMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="ChatUserStyle" TargetType="TextBlock" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="ChatAIStyle" TargetType="TextBlock" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Timeline Navigation -->
        <controls:TimelineNavigationControl x:Name="TimelineNavigation"
                                           Grid.Row="0"
                                           Height="80"
                                           NodeClicked="TimelineNavigation_NodeClicked"
                                           NodeHovered="TimelineNavigation_NodeHovered"/>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Context & Navigation -->
            <Border Grid.Column="0" Style="{StaticResource ContextPanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Context Section -->
                    <TextBlock Grid.Row="0" Text="Current Context" 
                               Foreground="{StaticResource TextColor}" 
                               FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <!-- Primary Context -->
                        <TextBlock Text="Primary:" Foreground="{StaticResource TextSecondaryColor}" FontSize="12" Margin="0,0,0,5"/>
                        <Button Content="{Binding PrimaryContextTitle}" 
                                Command="{Binding SetPrimaryContextCommand}"
                                CommandParameter="{Binding PrimaryContext}"
                                Style="{StaticResource PrimaryContextStyle}"
                                Margin="0,0,0,10"/>

                        <!-- Secondary Context -->
                        <TextBlock Text="Secondary:" Foreground="{StaticResource TextSecondaryColor}" FontSize="12" Margin="0,0,0,5"/>
                        <Button Content="{Binding SecondaryContextTitle}" 
                                Command="{Binding SetSecondaryContextCommand}"
                                CommandParameter="{Binding SecondaryContext}"
                                Style="{StaticResource ContextItemStyle}"
                                Margin="0,0,0,10"/>

                        <!-- Tertiary Context -->
                        <TextBlock Text="Tertiary:" Foreground="{StaticResource TextSecondaryColor}" FontSize="12" Margin="0,0,0,5"/>
                        <Button Content="{Binding TertiaryContextTitle}" 
                                Command="{Binding SetSecondaryContextCommand}"
                                CommandParameter="{Binding TertiaryContext}"
                                Style="{StaticResource ContextItemStyle}"
                                Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- Quick Actions -->
                    <TextBlock Grid.Row="2" Text="Quick Actions" 
                               Foreground="{StaticResource TextColor}" 
                               FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <Button Content="+ New Universe" 
                                Command="{Binding CreateElementCommand}"
                                CommandParameter="Universe"
                                Style="{StaticResource ContextItemStyle}"
                                Margin="0,0,0,5"/>
                        <Button Content="+ New Story" 
                                Command="{Binding CreateElementCommand}"
                                CommandParameter="Story"
                                Style="{StaticResource ContextItemStyle}"
                                Margin="0,0,0,5"/>
                        <Button Content="+ New Character" 
                                Command="{Binding CreateElementCommand}"
                                CommandParameter="Character"
                                Style="{StaticResource ContextItemStyle}"
                                Margin="0,0,0,5"/>
                        <Button Content="+ New Chapter" 
                                Command="{Binding CreateElementCommand}"
                                CommandParameter="Chapter"
                                Style="{StaticResource ContextItemStyle}"
                                Margin="0,0,0,5"/>
                        <Button Content="+ New Location" 
                                Command="{Binding CreateElementCommand}"
                                CommandParameter="Location"
                                Style="{StaticResource ContextItemStyle}"
                                Margin="0,0,0,5"/>
                    </StackPanel>

                    <!-- Recent Items -->
                    <TextBlock Grid.Row="4" Text="Recent Items" 
                               Foreground="{StaticResource TextColor}" 
                               FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <ListBox Grid.Row="5" ItemsSource="{Binding RecentItems}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Title}" 
                                        Command="{Binding DataContext.NavigateToElementCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource ContextItemStyle}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Center Panel: Main Editor -->
            <Border Grid.Column="1" Style="{StaticResource ContextPanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Editor Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding PrimaryContextTitle}" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontWeight="Bold" FontSize="20"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Save" Background="{StaticResource AccentColor}" 
                                    Foreground="White" BorderThickness="0" 
                                    Padding="10,5" Margin="5,0"/>
                            <Button Content="Export" Background="{StaticResource PrimaryColor}" 
                                    Foreground="White" BorderThickness="0" 
                                    Padding="10,5" Margin="5,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Editor Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Rich Text Editor -->
                            <TextBox Text="Start writing your story here..." 
                                     MinHeight="400" 
                                     Background="Transparent" 
                                     Foreground="{StaticResource TextColor}"
                                     BorderThickness="0"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     FontSize="14"
                                     Margin="0,0,0,20"/>

                            <!-- Character Sheet Template -->
                            <Border Background="{StaticResource SurfaceColor}" 
                                    Padding="20" 
                                    CornerRadius="5" 
                                    Margin="0,0,0,20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" 
                                               Foreground="{StaticResource TextSecondaryColor}" 
                                               Margin="0,0,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="Character Name" 
                                             Background="Transparent" 
                                             Foreground="{StaticResource TextColor}"
                                             BorderThickness="0" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" 
                                               Foreground="{StaticResource TextSecondaryColor}" 
                                               Margin="0,0,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="Character description..." 
                                             Background="Transparent" 
                                             Foreground="{StaticResource TextColor}"
                                             BorderThickness="0" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Motivation:" 
                                               Foreground="{StaticResource TextSecondaryColor}" 
                                               Margin="0,0,10,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="What drives this character?" 
                                             Background="Transparent" 
                                             Foreground="{StaticResource TextColor}"
                                             BorderThickness="0" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Relationships:" 
                                               Foreground="{StaticResource TextSecondaryColor}" 
                                               Margin="0,0,10,5"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" Text="Key relationships..." 
                                             Background="Transparent" 
                                             Foreground="{StaticResource TextColor}"
                                             BorderThickness="0"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Editor Footer -->
                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Auto-saved 2 minutes ago" 
                                   Foreground="{StaticResource TextSecondaryColor}" 
                                   FontSize="12"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Word Count: 1,247" Background="Transparent" 
                                    Foreground="{StaticResource TextSecondaryColor}" 
                                    BorderThickness="0" 
                                    Padding="5,0" Margin="5,0"/>
                            <Button Content="Characters: 8" Background="Transparent" 
                                    Foreground="{StaticResource TextSecondaryColor}" 
                                    BorderThickness="0" 
                                    Padding="5,0" Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right Panel: AI Assistant -->
            <Border Grid.Column="2" Style="{StaticResource ContextPanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- AI Header -->
                    <TextBlock Grid.Row="0" Text="{Binding EnhancedAIViewModel.InteractionTitle}" 
                               Foreground="{StaticResource TextColor}" 
                               FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <!-- AI Controls -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <ComboBox ItemsSource="{Binding EnhancedAIViewModel.AvailableModels}"
                                  SelectedItem="{Binding EnhancedAIViewModel.SelectedModel}"
                                  Background="{StaticResource SurfaceColor}"
                                  Foreground="{StaticResource TextColor}"
                                  BorderThickness="0"
                                  Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="Load Models" 
                                    Command="{Binding EnhancedAIViewModel.LoadModelsCommand}"
                                    Background="{StaticResource PrimaryColor}" 
                                    Foreground="White" 
                                    BorderThickness="0" 
                                    Padding="8,4" 
                                    Margin="0,0,5,0"/>
                            <Button Content="Clear" 
                                    Command="{Binding EnhancedAIViewModel.ClearHistoryCommand}"
                                    Background="{StaticResource SecondaryColor}" 
                                    Foreground="White" 
                                    BorderThickness="0" 
                                    Padding="8,4"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- AI Suggestions -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="AI Suggestions" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <ListBox ItemsSource="{Binding EnhancedAIViewModel.Suggestions}"
                                 Background="Transparent" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Title}" 
                                            Command="{Binding DataContext.EnhancedAIViewModel.ApplySuggestionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SuggestionItemStyle}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <!-- AI Chat -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <TextBlock Text="AI Chat" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="{Binding EnhancedAIViewModel.AIResponse}" 
                                           Style="{StaticResource ChatAIStyle}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- AI Input -->
                    <StackPanel Grid.Row="4">
                        <TextBox Text="{Binding EnhancedAIViewModel.UserQuery, UpdateSourceTrigger=PropertyChanged}"
                                 MinHeight="60" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 Background="{StaticResource SurfaceColor}" 
                                 Foreground="{StaticResource TextColor}" 
                                 BorderThickness="0"
                                 Margin="0,0,0,10"/>
                        
                        <Button Content="Send" 
                                Command="{Binding EnhancedAIViewModel.SendQueryCommand}"
                                Background="{StaticResource AccentColor}" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="2" Height="30" Background="{StaticResource SurfaceColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Ready" 
                       Foreground="{StaticResource TextSecondaryColor}" 
                       VerticalAlignment="Center" 
                       Margin="10,0"/>

            <TextBlock Grid.Column="1" Text="AI: Connected" 
                       Foreground="{StaticResource AccentColor}" 
                       VerticalAlignment="Center" 
                       Margin="10,0"/>

            <TextBlock Grid.Column="2" Text="v2.0.0" 
                       Foreground="{StaticResource TextSecondaryColor}" 
                       VerticalAlignment="Center" 
                       Margin="10,0"/>
        </Grid>
    </Grid>
</Window>
