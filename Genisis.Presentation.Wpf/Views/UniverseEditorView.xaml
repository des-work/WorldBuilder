<UserControl x:Class="Genisis.Presentation.Wpf.Views.UniverseEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.openxmlformats.org/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Universe Editor" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryText}"/>
            <TextBlock Text="Edit your universe details" 
                       FontSize="14" 
                       Foreground="{StaticResource SecondaryText}"/>
        </StackPanel>

        <!-- Editor Form -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Name Field -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <Label Content="Name:" 
                       Foreground="{StaticResource PrimaryText}" 
                       FontWeight="Bold"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#3C3C3C" 
                         Foreground="{StaticResource PrimaryText}" 
                         BorderBrush="#555555" 
                         Padding="10,8"/>
                <TextBlock Text="{Binding ValidationMessage}" 
                           Foreground="#e74c3c" 
                           FontSize="12" 
                           Margin="0,5,0,0"
                           Visibility="{Binding ValidationMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Description Field -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <Label Content="Description:" 
                       Foreground="{StaticResource PrimaryText}" 
                       FontWeight="Bold"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#3C3C3C" 
                         Foreground="{StaticResource PrimaryText}" 
                         BorderBrush="#555555" 
                         Padding="10,8"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         MinHeight="100"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <!-- Status Information -->
            <StackPanel Grid.Row="2" VerticalAlignment="Top">
                <TextBlock Text="Status Information" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryText}" 
                           Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Valid: " 
                               Foreground="{StaticResource SecondaryText}"/>
                    <TextBlock Text="{Binding IsValid}" 
                               Foreground="{Binding IsValid, Converter={StaticResource BooleanToColorConverter}}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Dirty: " 
                               Foreground="{StaticResource SecondaryText}"/>
                    <TextBlock Text="{Binding IsDirty}" 
                               Foreground="{Binding IsDirty, Converter={StaticResource BooleanToColorConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Save" 
                    Command="{Binding SaveCommand}" 
                    Background="{StaticResource AccentGreen}" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Padding="20,10" 
                    Margin="0,0,10,0"/>
            
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Background="#e74c3c" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Padding="20,10" 
                    Margin="0,0,10,0"/>
            
            <Button Content="Reset" 
                    Command="{Binding ResetCommand}" 
                    Background="#f39c12" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Padding="20,10"/>
        </StackPanel>
    </Grid>
</UserControl>
