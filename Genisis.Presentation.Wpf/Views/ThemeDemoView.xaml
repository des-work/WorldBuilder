<UserControl x:Class="Genisis.Presentation.Wpf.Views.ThemeDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Demo Animation -->
        <Storyboard x:Key="DemoAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="DemoElement"
                           Storyboard.TargetProperty="RenderTransform.Angle"
                           From="0" To="360" Duration="0:0:10"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceColor}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,0,0,1" 
                Padding="20,10">
            <TextBlock Text="Theme Demo" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextColor}" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" Spacing="20">
                
                <!-- Color Palette Demo -->
                <Border Background="{StaticResource SurfaceColor}" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        Padding="20" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Color Palette" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextColor}" 
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="5">
                                <Rectangle Height="50" Fill="{StaticResource PrimaryColor}" Margin="0,0,0,5"/>
                                <TextBlock Text="Primary" Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="5">
                                <Rectangle Height="50" Fill="{StaticResource SecondaryColor}" Margin="0,0,0,5"/>
                                <TextBlock Text="Secondary" Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="5">
                                <Rectangle Height="50" Fill="{StaticResource AccentColor}" Margin="0,0,0,5"/>
                                <TextBlock Text="Accent" Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Margin="5">
                                <Rectangle Height="50" Fill="{StaticResource GlowColor}" Margin="0,0,0,5"/>
                                <TextBlock Text="Glow" Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="4" Margin="5">
                                <Rectangle Height="50" Fill="{StaticResource BorderColor}" Margin="0,0,0,5"/>
                                <TextBlock Text="Border" Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Typography Demo -->
                <Border Background="{StaticResource SurfaceColor}" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        Padding="20" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Typography" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextColor}" 
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Title Text" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextColor}" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Heading Text" 
                                   FontSize="24" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextColor}" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Body Text - This is a sample of body text that demonstrates the theme's typography settings." 
                                   FontSize="16" 
                                   Foreground="{StaticResource TextColor}" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Caption Text" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextSecondaryColor}" 
                                   Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>

                <!-- Interactive Elements Demo -->
                <Border Background="{StaticResource SurfaceColor}" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        Padding="20" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Interactive Elements" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextColor}" 
                                   Margin="0,0,0,15"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="Primary Button" 
                                    Background="{StaticResource PrimaryColor}" 
                                    Foreground="White" 
                                    Padding="15,8" 
                                    Margin="0,0,10,0" 
                                    BorderThickness="0" 
                                    CornerRadius="5"/>
                            
                            <Button Content="Secondary Button" 
                                    Background="{StaticResource SurfaceColor}" 
                                    Foreground="{StaticResource TextColor}" 
                                    BorderBrush="{StaticResource BorderColor}" 
                                    BorderThickness="1" 
                                    Padding="15,8" 
                                    Margin="0,0,10,0" 
                                    CornerRadius="5"/>
                            
                            <Button Content="Accent Button" 
                                    Background="{StaticResource AccentColor}" 
                                    Foreground="White" 
                                    Padding="15,8" 
                                    Margin="0,0,10,0" 
                                    BorderThickness="0" 
                                    CornerRadius="5"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <CheckBox Content="Checkbox Option" 
                                      Foreground="{StaticResource TextColor}" 
                                      Margin="0,0,20,0"/>
                            
                            <RadioButton Content="Radio Option" 
                                         Foreground="{StaticResource TextColor}" 
                                         Margin="0,0,20,0"/>
                            
                            <ToggleButton Content="Toggle" 
                                           Foreground="{StaticResource TextColor}" 
                                           Margin="0,0,20,0"/>
                        </StackPanel>
                        
                        <TextBox Text="Sample text input" 
                                 Background="{StaticResource SurfaceColor}" 
                                 Foreground="{StaticResource TextColor}" 
                                 BorderBrush="{StaticResource BorderColor}" 
                                 Padding="10,8" 
                                 Margin="0,0,0,15"/>
                        
                        <ComboBox SelectedIndex="0" 
                                  Background="{StaticResource SurfaceColor}" 
                                  Foreground="{StaticResource TextColor}" 
                                  BorderBrush="{StaticResource BorderColor}" 
                                  Padding="10,8">
                            <ComboBoxItem Content="Option 1"/>
                            <ComboBoxItem Content="Option 2"/>
                            <ComboBoxItem Content="Option 3"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Animation Demo -->
                <Border Background="{StaticResource SurfaceColor}" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        Padding="20" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Animation Demo" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextColor}" 
                                   Margin="0,0,0,15"/>
                        
                        <Grid HorizontalAlignment="Center">
                            <Ellipse x:Name="DemoElement"
                                     Width="100" Height="100" 
                                     Fill="{StaticResource GlowColor}" 
                                     Opacity="0.7"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="{Binding Source={StaticResource GlowColor}, Path=Color}" 
                                                     BlurRadius="20" 
                                                     ShadowDepth="0" 
                                                     Opacity="0.8"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>
                        
                        <TextBlock Text="Rotating glow effect" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextSecondaryColor}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceColor}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <TextBlock Text="Theme system demonstration - Switch themes to see changes" 
                       FontSize="14" 
                       Foreground="{StaticResource TextSecondaryColor}" 
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
